<odoo>
  <report id="strategiksv.purchase_report"
    string="Purchase Report"
    model="strategiksv.reportesv.purchase.report"
    report_type="qweb-pdf"
    name="strategiksv.purchase_report_view"
    file="strategiksv.purchase_report"
    attachment_use="True"
    attachment="Reporte_De_Compras.pdf"
  />

  <template id="report_purchase_sql_view">
    <t t-name="report_purchase_view">
    <t t-call="web.html_container">
      <t t-call="web.external_layout">
        <div class="page">

        <!--Report page content-->
        <table class="table table-stripped">
          <tr>
            <th>Title</th>
            <th>Publisher</th>
            <th>Date</th>
          </tr>
          <t foreach="docs" t-as="o">
            <tr>
              <td class="col-xs-6">
                <span t-filed="o.name"/>
              </td>
              <td class="col-xs-3">
                <span t-filed="o.publisher_id"/>
              </td>
              <td class="col-xs-6">
                <span t-field="o.date_published" t-options="{'widget':'date'}"/>
              </td>
            </tr>
          </t>
        </table>
        </div>
      </t>
    </t>
    </t>
  </template>
</odoo>
