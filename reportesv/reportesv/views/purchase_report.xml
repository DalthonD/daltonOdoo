<odoo>
  <report id="action_purchase_sql_report"
    string="Purchase SQL Report"
    model="strategiksv_reportesv_purchase_report"
    report_type="qweb-html"
    name="library_app.report_purchase_sql"
  />

  <template id="report_purchase_sql">
    <t t-call="web.html_container">
      <t t-call="web.external_layout">
        <div class="page">

        <!--Report page content-->
        <table class="table table-stripped">
          <tr>
            <th>Title</th>
            <th>Publisher</th>
            <th>Date</th>
          </tr>
          <t foreach="docs" t-as="o">
            <tr>
              <td class="col-xs-6">
                <span t-filed="o.name"/>
              </td>
              <td class="col-xs-3">
                <span t-filed="o.publisher_id"/>
              </td>
              <td class="col-xs-6">
                <span t-field="o.date_published" t-options="{'widget':'date'}"/>
              </td>
            </tr>
          </t>
        </table>
        </div>
      </t>
    </t>
  </template>
</odoo>
