<odoo>
  <data>
    <record id="report_wizard_view" model="ir.ui.view">
      <field name="name">Asistente de Reportes</field>
      <field name="model">report_wizard</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="company_id"/>
          </group>
          <group>
            <field name="date_month"/>
            <field name="date_year"/>
            <field name="show_serie"/>
          </group>
          <group attrs="{'invisible': [('show_serie', '=', 'False')]}">
            <field name="serie_lenght"/>
          </group>
          <footer>
            <button name="check_report" string="Imprimir" type="object" default_focus="1" class="oe_highlight"/>
            or
            <button string="Cancelar" class="oe_link" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

  <record id="action_report_wizard" model="ir.actions.act_window">
		<field name="name">Asistente de Reportes</field>
		<field name="res_model">report_wizard</field>
    <field name="type">ir.actions.act_window</field>
    <field name="view_type">form</field>
		<field name="view_mode">form</field>
    <field name="view_id" ref="report_wizard_view"/>
    <field name="target">new</field>
	</record>


    <menuitem id="pdf_report" name="Reportes PDF"/>
      <menuitem id="reports_menu" name="Reportes" parent="pdf_report" sequence="10"/>
        <menuitem id="purchase_report" name="Reporte de Compras" action="action_report_wizard" parent="reports_menu"/>
        <menuitem id="purchase_report" name="Reporte de Contribuyentes" action="action_report_wizard" parent="reports_menu"/>
        <menuitem id="purchase_report" name="Reporte de Consumidores" action="action_report_wizard" parent="reports_menu"/>
  </data>
</odoo>
