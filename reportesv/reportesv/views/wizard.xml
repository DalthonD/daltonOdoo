<odoo>
  <data>
    <record model="ir.ui.view" id="report_wizard_view">
      <field name="name">consumer.sales.report.sql.tree</field>
      <field name="model">sales_consumer_report.wizard</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="company_id"/>
          </group>
          <group col="4">
            <field name="date_month"/>
            <field name="date_year"/>
          </group>
          <group col="2">
            <field name="show_serie"/>
            <field name="serie_lenght" attrs="{'invisible': [('show_serie', '=', 'False')]}"/>
          </group>
          <footer>
            <button name="check_report" string="Imprimir" type="object" default_focus="1" class="oe_highlight"/>
            or
            <button string="Cancelar" class="oe_link" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

  <record id="action_report_wizard" model="ir.actions.act_window">
		<field name="name">Asistente de Reportes</field>
		<field name="res_model">report_wizard</field>
    <field name="type">ir.actions.act_window</field>
    <field name="view_type">form</field>
		<field name="view_mode">form</field>
    <field name="view_id" ref="report_wizard_view"/>
    <field name="target">new</field>
	</record>


    <menuitem id="sales_pdf_report" name="PDF Reportes"/>
      <menuitem id="sale_consumer_report" name="ConsumerReport" action="action_consumersalesreport_wizard" parent="sales_pdf_report" sequence="10"/>
  </data>
</odoo>
