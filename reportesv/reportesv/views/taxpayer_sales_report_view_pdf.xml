<odoo>
  <data>
    <template id ='strategiksv_taxpayer_report_pdf'>
      <t t-call="report.container">
        <t t-call="report.external_layout">
          <div class="page">
            <div class="oe_structure"/>
            <div class="page-header"/>
            <t t-foreach="get_header_info(company_id)" as="c">
              <blockquote class="blockquote text-center">
                <p class="mb-0"><span t-esc="c['name']"/></p>
                <p class="mb-0">LIBRO DE VENTAS A CONTRIBUYENTES</p>
                <p class="mb-0">NIT: <span t-esc="c['nit']"/></p>
                <p class="mb-0">NRC: <span t-esc="c['nrc']"/></p>
                <p class="mb-0">Contador: <span t-esc="c['contador']"/></p>
                <p class="mb-0">VALORES EXPRESADOS EN DOLARES DE LOS ESTADOS UNIDOS</p>
              </blockquote>
            </t>
            <table class="table table-stripped">
              <tr>
                <td rowspan="2">#</td>
                <td rowspan="2">FECHA</td>
                <td rowspan="2">No. Corr. Por Tipo De Documento</td>
                <td rowspan="2" align="center">CLIENTE</td>
                <td rowspan="2">N.R.C.</td>
                <td colspan="4" align="center">VENTAS PROPIAS</td>
                <td rowspan="2">RETENCION</td>
                <td rowspan="2">PERCEPCION</td>
                <td rowspan="2">TOTAL</td>
              </tr>
              <tr>
                <td>EXENTAS</td>
                <td>GRAVADAS</td>
                <td>DEBITO</td>
                <td>T.VENTA</td>
              </tr>
              <t t-foreach="docs" as="o">
                <tr>
                  <td>1</td>
                  <td><span t-field="o.fecha"/></td>
                  <td><span t-field="o.factura"/></td>
                  <td><span t-field="o.cliente"/></td>
                  <td><span t-field="o.nrc"/></td>
                  <td><span t-field="o.exento"/></td>
                  <td><span t-field="o.gravado"/></td>
                  <td><span t-field="o.iva"/></td>
                  <td>Total Venta</td>
                  <td><span t-field="o.retenido"/></td>
                  <td><span t-field="o.percibido"/></td>
                  <td>Total</td>
                </tr>
              </t>
            </table>
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>
