<odoo>
  <data>
    <record id="report_wizard_view_taxpayer" model="ir.ui.view">
      <field name="name">Asistente de Reportes</field>
      <field name="model">report_wizard</field>
      <field name="arch" type="xml">
        <form string="Asistente">
          <group>
            <field name="company_id"/>
          </group>
          <group col="4">
            <field name="date_month"/>
            <field name="date_year"/>
          </group>
          <footer>
            <button name="check_taxpayer_report" string="Imprimir" type="object" default_focus="1" class="oe_highlight"/>
            or
            <button string="Cancelar" class="oe_link" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

  <record id="action_report_wizard_taxpayer" model="ir.actions.act_window">
		<field name="name">Asistente de Reportes</field>
		<field name="res_model">report_wizard</field>
    <field name="type">ir.actions.act_window</field>
    <field name="view_type">form</field>
		<field name="view_mode">form</field>
    <field name="view_id" ref="report_wizard_view_taxpayer"/>
    <field name="target">new</field>
	</record>

        <menuitem id="taxpayer_report" name="Reporte de Contribuyentes" action="action_report_wizard_taxpayer" parent="reports_main_menu" sequence="2"/>
  </data>
</odoo>
