<odoo>
  <data>
    <template id ='company_strategiksv_purchase_report_pdf'>
      <t t-call="web.html_container">
        <t t-call="web.basic_layout">
          <div class="page">
            <style type="text/css">
              table, th, tr, tbody {
                border-color: black;
                height: 100%;
                width: 100%;
                border-collapse: collapse;
                text-align: center;
                vertical-align: middle;
                border-spacing: 0px;
                padding: 0;
              }
              td, th {
                text-align: center;
                vertical-align: middle;
                border-collapse: collapse;
                padding: 0px;
                border-spacing: 0px;
              }
              .pagenumber:before {
                content: counter(page);
              }
              .pagecount:before {
                content: counter(pages);
              }
              @page {
                size: A4;
                margin: 1mm 1mm 1mm 1mm;
                @bottom-left{
                  content: "Pag. " counter(page) " de " counter(pages);
                }
              }
              @media print {
                .page {
                  page-break-before: always;
                }

                footer {
                  position: fixed;
                  bottom: 0;
                }

                html {
                  width: 216mm;
                  height: 279mm;
                }
              }
            </style>
            <!--Declaracion de variables-->
            <t t-set="month" t-value="int(0)"/>
            <t t-set="year" t-value="int(0)"/>
            <t t-set="company_id" t-value="int(0)"/>
            <t t-set="contador" t-value="null"/>
            <t t-set="company" t-value="null"/>

            <t t-set="compra" t-value="float(0.00)"/>
            <t t-set="zero" t-value="'{0:.2f}'.format(float(0.00))"/>
            <t t-set="totalExentas" t-value="float(0.00)"/>
            <t t-set="totalGravadas" t-value="float(0.00)"/>
            <t t-set="totalIva" t-value="float(0.00)"/>
            <t t-set="totalRetenido" t-value="float(0.00)"/>
            <t t-set="totalPercibido" t-value="float(0.00)"/>
            <t t-set="totalCompras" t-value="float(0.00)"/>
            <t t-set="totalExcluidos" t-value="float(0.00)"/>
            <t t-set="totalRetenido3" t-value="float(0.00)"/>
            <t t-set="importacion" t-value="False"/>
            <!--Fin de declaraciones-->

            <!--Encabezado-->
              <t t-foreach="docs" t-as="o">
                <t t-set="month" t-value="int(data.get('form').get('date_month'))"/>
                <t t-set="year" t-value="int(data.get('form').get('date_year'))"/>
                <t t-set="company_id" t-value="int(data.get('form').get('company_id')[0])"/>
                <t t-set="contador" t-value="o.sv_aprueba_partida"/>
                <t t-set="company" t-value="o"/>
                <!-->
                fecha [0]
                feactura [1]
                proveedor [2]
                nrc [3]
                importacion [4]
                gravado [5]
                exento [6]
                iva [7]
                retenido [8]
                percibido [9]
                excluido [10]
                retencion3 [11]
                <-->
                <div style="background-color:lightgray; text-align: center">
                  <h2>NOMBRE DEL CONTRIBUYENTE: <span t-field="o.name"/></h2>
                  <h2>LIBRO DE COMPRAS CON OPERACIONES DE RETENCIÓN</h2>
                  <h2>NIT: <span t-field="o.sv_nit"/> NRC: <span t-field="o.sv_nrc"/></h2>
                  <h2>MES: <span t-esc="o.get_month_str(month)"/> DE <span t-esc="year"/></h2>
                  <h2>VALORES EXPRESADOS EN DOLARES DE LOS ESTADOS UNIDOS</h2>
                </div>
              </t>
            <!--Fin encabezado-->
            <!--Contenido de reporte-->
            <t t-foreach="company.get_purchase_details(company_id, year, month)" t-as="c">
              <!--table class="table table-bordered" style="border-color: black; height: 100%; width: 100%; border-collapse: collapse; border: 1px solid black"-->
              <table class="table table-bordered" style="border: 1px solid black; padding: 0px; border-collapse: collapse;">
                <div t-if="c_first">
                  <!--tr style="text-align: center; vertical-align: middle; height: auto; width: auto;"-->
                  <tr style="width: 100%;">
                    <th colspan="5"></th>
                    <th colspan="2">COMPRAS EXENTAS</th>
                    <th colspan="3">COMPRAS GRAVADAS</th>
                    <th colspan="5"></th>
                  </tr>
                  <tr style="width: 100%;">
                    <th style="text-align: center; vertical-align: middle;">#</th>
                    <th style="text-align: center; vertical-align: middle;">Fecha de emisión</th>
                    <th style="text-align: center; vertical-align: middle;">Número de documento</th>
                    <th style="text-align: center; vertical-align: middle;">Nombre del proveedor</th>
                    <th style="text-align: center; vertical-align: middle;">N.R.C.</th>
                    <th style="text-align: center; vertical-align: middle;">Internas</th>
                    <th style="text-align: center; vertical-align: middle;">Importaciones e Internacionales</th>
                    <th style="text-align: center; vertical-align: middle;">Internas</th>
                    <th style="text-align: center; vertical-align: middle;">Importaciones e Internacionales</th>
                    <th style="text-align: center; vertical-align: middle;">Crédito fiscal</th>
                    <th style="text-align: center; vertical-align: middle;">Anticipo a Cuenta de IVA Retenido</th>
                    <th style="text-align: center; vertical-align: middle;">Anticipo a Cuenta de IVA Percibido</th>
                    <th style="text-align: center; vertical-align: middle;">Total compras</th>
                    <th style="text-align: center; vertical-align: middle;">Compras a Sujetos Excluidos</th>
                    <th style="text-align: center; vertical-align: middle;">Retención a Terceros</th>
                  </tr>
                </div>
                  <tr style="text-align: center; vertical-align: middle; height: auto; width: 100%; padding: 0px; border-collapse: collapse;">
                    <td><span t-esc="int(c_index) + 1"/></td>
                    <td><span t-esc="c[0]"/></td>
                    <td><span t-esc="c[1]"/></td>
                    <td><span t-esc="c[2]"/></td>
                    <td><span t-esc="c[3]"/></td>
                    <td><span t-esc="company.currency_id.symbol"/>
                        <span  t-if="c[4] != True" t-esc="'{0:.2f}'.format(c[6])"/>
                        <span  t-else="" t-esc="zero"/>
                    </td>
                    <td><span t-esc="company.currency_id.symbol"/>
                      <span t-if="c[4] == True" t-esc="'{0:.2f}'.format(c[6])"/>
                      <span t-else="" t-esc="zero"/>
                    </td>
                    <td><span t-esc="company.currency_id.symbol"/>
                      <span t-if="c[4] != True" t-esc="'{0:.2f}'.format(c[5])"/>
                      <span t-else="" t-esc="zero"/>
                    </td>
                    <td><span t-esc="company.currency_id.symbol"/>
                      <span t-if="c[4] == True" t-esc="'{0:.2f}'.format(c[5])"/>
                      <span t-else="" t-esc="zero"/>
                    </td>
                    <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(c[7])"/></td>
                    <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(c[8])"/></td>
                    <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(c[9])"/></td>
                    <t t-set="compra" t-value="c[6] + c[5] + c[7] + c[8] + c[9]"/>
                    <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(compra)"/></td>
                    <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(c[10])"/></td>
                    <td><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(c[11])"/></td>
                    <!--Calculo de totales-->
                    <t t-set="importacion" t-value="c[4]"/>
                    <t t-set="totalExentas" t-value="totalExentas + c[6]"/>
                    <t t-set="totalGravadas" t-value="totalGravadas + c[5]"/>
                    <t t-set="totalIva" t-value="totalIva + c[7]"/>
                    <t t-set="totalRetenido" t-value="totalRetenido + c[8]"/>
                    <t t-set="totalPercibido" t-value="totalPercibido + c[9]"/>
                    <t t-set="totalCompras" t-value="totalCompras + compra"/>
                    <t t-set="totalExcluidos" t-value="totalExcluidos + c[10]"/>
                    <t t-set="totalRetenido3" t-value="totalRetenido3 + c[11]"/>
                    <!--Fin ce calculos-->
                </tr>
                <div t-if="c_last">
                  <tr>
                    <td>
                    </td>
                    <td>
                    </td>
                    <td>
                    </td>
                    <td>
                    </td>
                    <td>
                    </td>
                    <td><span t-esc="company.currency_id.symbol"/>
                        <span t-if="importacion != True" t-esc="'{0:.2f}'.format(totalExentas)"/>
                        <span t-else="" t-esc="zero"/>
                    </td>
                    <td><span t-esc="company.currency_id.symbol"/>
                        <span t-if="importacion == True" t-esc="'{0:.2f}'.format(totalExentas)"/>
                        <span t-else="" t-esc="zero"/>
                    </td>
                    <td><span t-esc="company.currency_id.symbol"/>
                        <span t-if="importacion != True" t-esc="'{0:.2f}'.format(totalGravadas)"/>
                        <span t-else="" t-esc="zero"/>
                    </td>
                    <td><span t-esc="company.currency_id.symbol"/>
                        <span t-if="importacion == True" t-esc="'{0:.2f}'.format(totalGravadas)"/>
                        <span t-else="" t-esc="zero"/>
                    </td>
                    <td>
                      <span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalIva)"/>
                    </td>
                    <td>
                      <span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalRetenido)"/>
                    </td>
                    <td>
                      <span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalPercibido)"/>
                    </td>
                    <td>
                      <span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalCompras)"/>
                    </td>
                    <td>
                      <span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalExcluidos)"/>
                    </td>
                    <td>
                      <span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalRetenido3)"/>
                    </td>
                  </tr>
                </div>
              </table>
            </t>
              <table id="tr01" style="border: none">
                <tr style="width: 100%;">
                  <td align="right">
                    <table class="table table-bordered" style="border: 1px solid black; border-collapse: collapse;">
                      <tr>
                        <td colspan="2" style="text-align: center">RESUMEN DE COMPRAS</td>
                      </tr>
                      <tr>
                        <td style="text-align: left">Compras Exentas:</td>
                        <td style="text-align: right"><span t-esc="company.currency_id.symbol"/>
                                          <span t-if="importacion != True" t-esc="'{0:.2f}'.format(totalExentas)"/>
                                          <span t-else="" t-esc="zero"/>
                        </td>
                      </tr>
                      <tr>
                        <td style="text-align: left">Importaciones Exentas:</td>
                        <td style="text-align: right"><span t-esc="company.currency_id.symbol"/>
                                          <span t-if="importacion == True" t-esc="'{0:.2f}'.format(totalExentas)"/>
                                          <span t-else="" t-esc="zero"/>
                        </td>
                      </tr>
                      <tr>
                        <td style="text-align: left">Compras Gravadas:</td>
                        <td style="text-align: right"><span t-esc="company.currency_id.symbol"/>
                                          <span t-if="importacion != True" t-esc="'{0:.2f}'.format(totalGravadas)"/>
                                          <span t-else="" t-esc="zero"/>
                        </td>
                      </tr>
                      <tr>
                        <td style="text-align: left">Importaciones Gravadas:</td>
                        <td style="text-align: right"><span t-esc="company.currency_id.symbol"/>
                                          <span t-if="importacion == True" t-esc="(totalGravadas)"/>
                                          <span t-else="" t-esc="zero"/>
                        </td>
                      </tr>
                      <tr>
                        <td style="text-align: left">Crédito Fiscal:</td>
                        <td style="text-align: right"><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalIva)"/></td>
                      </tr>
                      <tr>
                        <td style="text-align: left">IVA Percibido:</td>
                        <td style="text-align: right"><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalPercibido)"/></td>
                      </tr>
                      <tr>
                        <td style="text-align: left">IVA Retenido:</td>
                        <td style="text-align: right"><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalRetenido)"/></td>
                      </tr>
                      <tr>
                        <td style="text-align: left">TOTAL:</td>
                        <td style="text-align: right"><span t-esc="company.currency_id.symbol"/><span t-esc="'{0:.2f}'.format(totalCompras)"/></td>
                      </tr>
                    </table>
                  </td>
                  <td style="width: 30%"></td>
                  <td style="text-align: center; vertical-align: middle">
                    <div style="text-align: center;">
                        <p align="center">_________________________________________</p>
                        <p align="center" style="vertical-align: top"><span t-esc="contador"/></p>
                        <p align="center" style="vertical-align: top">Contador</p>
                    </div>
                  </td>
                </tr>
              </table>

              <!--Pie de pagina-->
              <footer class="footer" style="background-color: lightgray; top: 90x; position: absolute; width: 100%; border-width: 55%;">
                <div class="row">
                    <p style="position: bottom-right;">Pag. <span class="page" style="position: bottom-right;"></span>
                    de
                    <span class="topage" style="position: bottom-right;"></span></p>
                </div>
              </footer>
              <!-- Fin Pie de pagina-->
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>
