<odoo>
    <record model="ir.ui.view" id="consumer_sales_report_sql_tree">
      <field name="name">Strategiksv Consumer Sales Report</field>
      <field name="model">strategiksv_reportesv_sales_consumer_report.wizard</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="company_id"/>
          </group>
          <group col="4">
            <field name="date_month"/>
            <field name="date_year"/>
          </group>
          <footer>
            <button name="check_report" string="Imprimir" type="object" default_focus="1" class="oe_highlight"/>
            or
            <button string="Cancelar" class="oe_link" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

  <record model="ir.actions.act_window" id="action_consumersalesreport_wizard">
		<field name="name">Ventas a Consumidores(Reporte)</field>
		<field name="res_model">strategiksv_reportesv_sales_consumer_report.wizard</field>
    <field name="type">ir.actions.act_window</field>
    <field name="view_type">form</field>
		<field name="view_mode">form</field>
    <field name="view_id" ref="consumer_sales_report_view"/>
    <field name="target">new</field>
		<field name="help" type="html">
	</record>


    <menuitem id="sales_pdf_report" name="PDF Reportes" parent="sales_team.menu_sale_report" sequence="20"/>
      <menuitem id="sale_consumer_report" name="ConsumerReport" action="action_consumersalesreport_wizard" parent="sales_report.sale_pdf_report" sequence="10"/>
</odoo>
