<odoo>
  <data>
    <template id ='strategiksv_consumer_report_pdf'>
      <t t-call="report.container">
        <t t-call="report.external_layout">
          <div class="page">
            <div class="oe_structure"/>
            <div class="page-header"/>
            <t t-foreach="get_header_info(company_id)" as="c">
              <blockquote class="blockquote text-center">
                <p class="mb-0">NOMBRE DEL CONTRIBUYENTE: <span t-esc="c['name']"/></p>
                <p class="mb-0">LIBRO DE VENTAS A CONSUMIDORES Y EXPORTACIONES</p>
                <p class="mb-0">NIT: <span t-esc="c['nit']"/></p>
                <p class="mb-0">NRC: <span t-esc="c['nrc']"/></p>
                <p class="mb-0">Contador: <span t-esc="c['contador']"/></p>
                <p class="mb-0">VALORES EXPRESADOS EN DOLARES DE LOS ESTADOS UNIDOS</p>
              </blockquote>
            </t>
            <table class="table table-stripped">
              <tr>
                <td rowspan="3" valign="middle">#</td>
                <td rowspan="3" valign="middle">Fecha</td>
                <td colspan="2" align="center">Documentos Emitidos</td>
                <td colspan="4" align="center">Ventas</td>
                <td rowspan="3">Ventas Totales</td>
              </tr>
              <tr>
                <td rowspan="2" valign="middle" align="center">Del No.</td>
                <td rowspan="2" valign="middle" align="center">Al No.</td>
                <td rowspan="2" valign="middle">Exentas</td>
                <td colspan="2" align="center">Gravadas</td>
                <td rowspan="2" valign="middle">Retención</td>
              </tr>
              <tr>
                <td align="center">Locales</td>
                <td align="center">Exportación</td>
              </tr>
              <t t-foreach="docs" as="o">
                <tr>
                  <td>1</td>
                  <td><span t-field="o.fecha"/></td>
                  <td><span t-field="o.delnum"/></td>
                  <td><span t-field="o.alnum"/></td>
                  <td><span t-field="o.exento"/></td>
                  <td><span t-field="o.gravadolocal"/></td>
                  <td><span t-field="o.gravadoexportacion"/></td>
                  <td><span t-field="o.retenido"/></td>
                  <td>Total</td>
                </tr>
              </t>
            </table>
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>
